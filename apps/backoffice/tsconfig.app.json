{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["vite/client"],
    "module": "ESNext",
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.js",
    "src/**/*.jsx", 
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/vite-env.d.ts",
    "index.html"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.spec.js",
    "src/**/*.spec.jsx"
  ]
}